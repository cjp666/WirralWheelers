@page "{id:int}"

@model RideDetailsModel
@{
    ViewData["Title"] = "RideDetails";
}

@functions {
    public string GetClass(string level) {
        if (level.Equals("A")) {
            return "red-ride";
        }
        if (level.Equals("B")) {
            return "blue-ride";
        }
        if (level.Equals("C")) {
            return "green-ride";
        }
        return "purple-ride";
    }
}

<div class="row pt-4">
    <div class="col">
        <div class="card ride-details @GetClass(@Model.Ride.Level) mb-2">
            <div class="card-body">
                <a asp-page="rideDetails" asp-route-id="@Model.Ride.Id">
                    <h5 class="card-title">@Model.Ride.Date.ToString("dd MMMMM yyyy") - @Model.Ride.Title</h5>
                    <h6 class="card-subtitle mb-2">@Model.Ride.Description</h6>
                    <p class="pb-0 mb-0">Ride Leader: @Model.Ride.RideLeader</p>
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col blog-main">
        <div class="blog-post">
            @if(@Model.Ride.Comments1 != "") {
                <p class="blog-post-meta">By: @Model.Ride.Comments1By</p>
                <div class="row">
                    <div class="col">
                        @Html.Raw(@Model.Ride.Comments1)
                    </div>
                    @if (@Model.Ride.Comment1Photos.Count() > 0) {
                        <div class="col">
                            <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="3000">
                                <ol class="carousel-indicators">
                                    @for(var index = 0; index < @Model.Ride.Comment1Photos.Count(); index++) {
                                        var className = "";
                                        @if (index == 0) { className = "active"; }
                                        <li data-target="#myCarousel" data-slide-to=@index.ToString() class="@className"></li>
                                    }
                                </ol>
                                <div class="carousel-inner" role="listbox">
                                    @for(var index = 0; index < @Model.Ride.Comment1Photos.Count(); index++)
                                    {
                                        var className = "";
                                        @if (index == 0) { className = "active"; }
                                        var photo = @Model.Ride.Comment1Photos[index];
                                        <div class="carousel-item @className">
                                            <img src="~/gallary/@Model.Ride.Id/@photo" alt="" class="d-block w-100" />
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }

            @if(@Model.Ride.Comments2 != "") {
                <hr />
                <p class="blog-post-meta">By: @Model.Ride.Comments2By</p>
                <div class="row">
                    <div class="col">
                        @Html.Raw(@Model.Ride.Comments2)
                    </div>
                    @if (@Model.Ride.Comment2Photos.Count() > 0) {
                        <div class="col">
                            <div id="myCarousel2" class="carousel slide" data-ride="carousel" data-interval="3000">
                                <ol class="carousel-indicators">
                                    @for(var index = 0; index < @Model.Ride.Comment2Photos.Count(); index++) {
                                        var className = "";
                                        @if (index == 0) { className = "active"; }
                                        <li data-target="#myCarousel2" data-slide-to=@index.ToString() class="@className"></li>
                                    }
                                </ol>
                                <div class="carousel-inner" role="listbox">
                                    @for(var index = 0; index < @Model.Ride.Comment2Photos.Count(); index++)
                                    {
                                        var className = "";
                                        @if (index == 0) { className = "active"; }
                                        var photo = @Model.Ride.Comment2Photos[index];
                                        <div class="carousel-item @className">
                                            <img src="~/gallary/@Model.Ride.Id/@photo" alt="" class="d-block w-100" />
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

<div class="row pt-4">
    <div class="col">
        <img src="~/rides/@Model.Ride.Map" alt="No map available for this ride" class="w-100" />
    </div>
    <div class="col">
        <img src="~/rides/@Model.Ride.Distance" alt="No distance details are available for this ride" class="w-100" />
    </div>
    <div class="col">
        <img src="~/rides/@Model.Ride.Elevation" alt="No elevation details are available for this ride" class="w-100" />
    </div>
</div>
